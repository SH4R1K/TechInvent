@model WebMVC.Models.User

@{
    ViewData["Title"] = "Авторизация";
}
<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">

                    <h3 class="mb-5">Авторизация</h3>
                    <form asp-action="Login">
                        <div data-mdb-input-init class="form-outline mb-4">
                            <input asp-for="Login" placeholder="Логин" id="login" class="form-control form-control-lg" />
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input asp-for="Password" type="password" placeholder="Пароль" id="password" class="form-control form-control-lg" />
                        </div>
                        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" type="submit">Авторизоваться</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>