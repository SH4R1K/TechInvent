<div class="modal fade" id="editWorkplaceSerialModal" tabindex="-1" aria-labelledby="editWorkplaceSerialModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editWorkplaceSerialModalLabel">Изменить серийный номер</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="UpdateSerialNumber" method="post">
                    <div class="mb-3">
                        <input type="hidden" class="form-control" id="EditIdWorkplace" name="id" required />
                        <label for="EditWorkplaceSerialNumber" class="form-label">Серийный номер</label>
                        <input type="text" class="form-control" id="EditWorkplaceSerialNumber" name="serialNumber"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Обновить</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var buttons = document.querySelectorAll('[data-bs-target="#editWorkplaceSerialModal"]');

        buttons.forEach(function (button) {
            button.addEventListener('click', function () {
                var workplaceId = this.getAttribute('data-workplace-id');
                var serialNumber = this.getAttribute('data-invent-number');

                document.getElementById('EditIdWorkplace').value = workplaceId;
                document.getElementById('EditWorkplaceSerialNumber').value = serialNumber;
            });
        });
    });
</script>